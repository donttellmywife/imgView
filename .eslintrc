{
  "extends": [
    "airbnb"
  ],

  "rules": {
    "no-console": "off",
    "import/extensions": "always",
    "curly": ["error", "all"],
    "no-plusplus": "off",
    "arrow-parens": ["warn", "always"],
    "func-names": "off",
    "func-style": "off",
    "no-use-before-define": "off",
    "no-unused-expressions": "off"
  },

  "globals": {
    "document": false,
    "window": true
  },
}
